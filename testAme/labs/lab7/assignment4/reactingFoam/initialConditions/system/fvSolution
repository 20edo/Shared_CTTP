FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother	GaussSeidel;
	tolerance       1e-05;
        relTol          0.01;
    }

    pFinal
    {
	    $p;
	    reltol	0;
    }

    "(rho|U|k|epsilon)Final"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }
    "(rho|U|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }

   "h.*"
   {
	$U;
	tolerance	1e-6;
	relTol		0;
   }
   "(Yi|O2|N2|H2O).*"
   {
	   solver 		PBiCGStab;
	   preconditioner 	DILU;
	   tolerance 		1e-6;
	   relTol 		0;
   }

		
}

PIMPLE
{
	nCorrectors			2;
	nOuterCorrectors		25; 
	turbOnFinalIterOnly		no;
	nNonOrthogonalCorrectors	0;
	consistent			yes;

