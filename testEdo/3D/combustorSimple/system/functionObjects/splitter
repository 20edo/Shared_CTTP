forceSplitter
{
		type		forces;
		enabled		yes;
		libs		("libforces.so");
		log		yes;
		patches		("(splitter.*)");
		rho		rhoInf;
		rhoInf		1.18;

		writeControl	timeStep;
		writeInterval	1;

		liftDir		(1 0 0);
		dragDir		(0 1 0);
		CofR		(0 0 0);
}
	
