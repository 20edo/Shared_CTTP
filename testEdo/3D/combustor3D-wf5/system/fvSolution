FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
        tolerance       1e-09;
        relTol          0;
    }
    
    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-5;
        relTol           0.05;
    }
    
    pFinal
    {
    	$p
    	relTol	0;
    }

    
    "(U|k|epsilon|h).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
    }
    
    "(Yi|O2|N2|H2O).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-05;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors 		2;
    nOuterCorrectors 		8;
    nNonOrthogonalCorrectors 	0;
    consistent 			yes;
    turbOnFinalIterOnly		false;

    outerCorrectorResidualControl
    {
	"(U|k|epsilon|p|rho|h|Yi|O2|N2|H2O)"
	{
		relTol	0;
		tolerance	1e-4;
	}

    }
}

relaxationFactors
{
	fields
	{
		"p.*"	0.45;
	}

	equations
       	{
        	"U.*"               	0.65;
	       	"(k|epsilon).*"	0.50;
		"(h|e).*"         	0.50;
		O2			0.50;
        	C7H16			0.50;
        	CO2			0.50;
        	H2O			0.50;	       
    }
}


