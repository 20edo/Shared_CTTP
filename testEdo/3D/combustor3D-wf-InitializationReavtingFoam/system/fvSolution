FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
        tolerance       1e-09;
        relTol          0;
    }
    
    "p.*"
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0;
        smoother        GaussSeidel;
    }
    
    "(U|k|epsilon|h).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
    }
    
    "(Yi|O2|N2|H2O).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors 2;
    nOuterCorrectors 30;
    nNonOrthogonalCorrectors 0;
    consistent yes;

    outerCorrectorResidualControl
    {
        p 
        {
            tolerance 1e-4;
            relTol 0;
        }

        U 
        {
            tolerance 1e-5;
            relTol 0;
        }

    }
}

relaxationFactors
{
    fields
    {
        "p.*"         0.6;
    }

    equations
    {
        "U.*"         0.5;
        "(k|epsilon)" 0.5;
        "(h|e)"       0.5;
        O2	0.5;
        C7H16	0.5;
        CO2	0.5;
        H2O	0.5;	       
    }
}


