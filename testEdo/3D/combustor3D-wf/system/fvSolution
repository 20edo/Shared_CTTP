FoamFile
{
    version     2.0;
    format      binary;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
        tolerance       1e-09;
        relTol          0;
    }
    
    "p.*"
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0;
        smoother        GaussSeidel;
    }
    
    "(U|k|epsilon|h).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
    }
    
    "(Yi|O2|N2|H2O).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors 2;
    nOuterCorrectors 30;
    nNonOrthogonalCorrectors 3;
    consistent yes;

    outerCorrectorResidualControl
    {
	"(U|k|epsilon|p|rho|h)"
	{
		relTol	0;
		tolerance	1e-4;
	}
        U 
        {
            tolerance 1e-5;
            relTol 0;
        }

    }
}

relaxationFactors
{
	fields
	{
		"p.*"	0.5;
	}

	equations
       	{
        	"U.*"               	0.75;
       	"(k|epsilon).*"        0.65;
		"(h|e).*"         	0.65;
		O2	0.65;
        	C7H16	0.65;
        	CO2	0.65;
        	H2O	0.65;	       
    }
}


