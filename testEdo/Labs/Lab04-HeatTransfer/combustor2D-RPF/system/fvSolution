FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
	Phi	// Potential Foam 
	{
		solver		GAMG;
		smoother	DIC;
		tolerance	1e-6;
		reltol		0.01;
	}
    p
    {
        solver          GAMG;
        tolerance       1e-05;
        relTol          0.01;
        smoother        GaussSeidel;
    }

    pFinal
    {
	    $p;
	    reltol	0;
    }

    "(U|k|epsilon)Final"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }
    "(U|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }
    
    "rho.*"
    {
		solver		smoothSolver;
		smoother	symGaussSeidel;
		tolerance	1e-5;
		reltol		0;
    }
    
    h
    {
	    solver	smoothSolver;
	    smoother	symGaussSeidel;
	    tolerance	1e-5;
	    reltol	0.1;
    }
    
    hFinal
    {
	    $h;
	    relTol	0;
    }
}

potentialFlow
{
	nNonOrthogonalCorrectors	3;
}

PIMPLE
{
	nCorrectors		1;
	nOuterCorrectors	100; 
	turbOnFinalIterOnly	no;
	nNonOrthogonalCorrectors	0;
	consistent		no;

	outerCorrectorResidualControl
	{
		"(U|k|epsilon|p|rho|h)"
		{
			relTol	0;
			tolerance	1e-4;
		}
	}
}

relaxationFactors
{
	fields
	{
		"p.*"	0.3;
	}

	equations
       	{
        	"U.*"               	0.7;
       		"(k|epsilon).*"         0.5;
		"(h|e).*"         0.5;
   
    	}
}


