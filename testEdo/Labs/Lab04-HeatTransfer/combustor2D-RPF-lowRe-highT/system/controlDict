        {
            mean     		true;
            prime2Mean  	true;
            base        	time;
	    windowType  	exact;
	    window       	0.2;
	    allowRestart 	true;
        }
        k
        {
            	mean        	true;
            	prime2Mean  	true;
            	base        	time;
            	windowType	exact;
            	window          0.2;
            	allowRestart    true;

       	}
	p
	{
		mean		true;
		prime2Mean	true;
		base		time;
            	windowType      exact;
            	window          0.2;
            	allowRestart    true;

	}
    	);

    	// Optional entries (runtime modifiable)
    	restartOnRestart    false;
