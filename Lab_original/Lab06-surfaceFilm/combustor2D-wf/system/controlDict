FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     sprayFilmFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.05;

deltaT          1e-5;

writeControl    adjustableRunTime;

writeInterval   5e-4;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep yes;

maxCo 0.9;

functions
{

    residuals
    {
        type residuals;
        enabled no;
        fields (p U k epsilon);
        libs ("libutilityFunctionObjects.so");
    }

    pInlet
    {
        type surfaceFieldValue;
        enabled no;
        log true;
        writeControl timeStep;
        writeInterval 1;
        regionType patch;
        writeFields no;
        name inlet;
        operation average;
        fields (p);
        libs ("libfieldFunctionObjects.so");
    }

    force
    {
        type forces;
        enabled no;
        libs ("libforces.so");
        log yes;
        patches (splitter back fuel_inlet);
        rho rhoInf;
        rhoInf 1.18;

        writeControl timeStep;
        writeInterval 1;

        liftDir (1 0 0);
        dragDir (0 1 0);
        CofR  (0 0 0);
    }
  
    probes1
    {
        type probes;
        enabled no;
        writeControl timeStep;
        writeInterval 1;
		
        fields (p U);
        probeLocations
        (
            (0 0.04 5e-4)
            (0 -0.04 5e-4)
        );
    }

    axialLine
    {
        type sets;
        enabled no;
        writeControl timeStep;
        writeInterval 1;

        fields (p U);
        setFormat raw; // other options...
        interpolationScheme cellPointFace; // other options

        sets
        (
            circle1
            {
                type circle; // other options
                axis xyz; //x; //z; //xyz //distance
                origin (0 0 1e-4);
                circleAxis (0 0 1);
                startPoint (-25e-3 0 1e-4);
                dTheta 1;
            }
        );
    }
 
    yPlane
    {
        type surfaces;
        enabled no;
        writeControl timeStep;
        writeInterval 1;

        fields (p U);
        interpolationScheme cellPoint;
        surfaceFormat vtk;
		
        surfaces
        (
            section1
            {
                type cuttingPlane;
                planeType pointAndNormal;
                pointAndNormalDict
                {
                    point (0 0.05 1e-4);
                    normal (0 1 0);
                }
                interpolate true;
            }
        );
    }

    obstacle
    {
        type surfaces;
        enabled no;
        writeControl timeStep;
        writeInterval 1;

        fields (p);
        interpolationScheme cellPoint;
        surfaceFormat vtk;
		
        surfaces
        (
            obstacle
            {
                type patch;
                patches ("splitter" "back" "fuel_inlet");
                interpolate true;
            }
        );
    }
    isoP
    {
        type surfaces;
        enabled no;
        writeControl timeStep;
        writeInterval 1;

        fields (p U);
        interpolationScheme cellPoint;
        surfaceFormat vtk;
		
        surfaces
        (
            isoP
            {
                type isoSurface;
                isoField p;
                isoValue 0;
                interpolate true;
            }
        );
    }
}


// ************************************************************************* //

















