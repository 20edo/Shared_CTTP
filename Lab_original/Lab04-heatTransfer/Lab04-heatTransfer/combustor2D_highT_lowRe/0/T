FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 300;
    }
    outlet
    {
        type            zeroGradient;
    }
    splitter
    {
        type            fixedValue;
        value           uniform 1500;
    }
    fuel_inlet
    {
        type            fixedValue;
        value           uniform 700;
    }
    back
    {
        type            fixedValue;
        value           uniform 1500;
    }
    sides
    {
        type            fixedValue;
        value           uniform 1500;
    }
    frontAndBack
    {
        type            empty;
    }
}


